
FROM debian

RUN apt-get update 
RUN apt-get install -y curl 
RUN apt-get install -y apt-transport-https
RUN curl https://repo.varnish-cache.org/GPG-key.txt | apt-key add - 
RUN echo "deb https://repo.varnish-cache.org/debian/ jessie varnish-4.1" >> /etc/apt/sources.list.d/varnish-cache.list 
RUN echo "deb https://repo.varnish-cache.org/debian/ jessie varnish-4.0" >> /etc/apt/sources.list.d/varnish-cache.list 
RUN apt-get update 
RUN apt-get install -y varnish 
RUN apt-get install -y varnish-agent

EXPOSE 80 6035
CMD ["varnishd","-f","/etc/varnish/default.vcl","-F"]
ENTRYPOINT ["varnish-agent","-d"]
